datasource db {
  provider = "sqlite"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id     Int    @id @default(autoincrement())
  passwd String
}

model ComsRoom {
  id         Int       @id @default(autoincrement())
  screen     String    @unique
  name       String?
  opened     DateTime?
  closed     DateTime?
  lastBackup DateTime?
  msgs       ComsMsg[]
}

model ComsMsg {
  id        Int      @id @default(autoincrement())
  room      ComsRoom @relation(fields: [roomId], references: [id])
  roomId    Int
  user      ComsUser @relation(fields: [userId], references: [id])
  userId    Int
  text      String
  timestamp DateTime
}

model ComsUser {
  id      Int       @id @default(autoincrement())
  ComsMsg ComsMsg[]
}
